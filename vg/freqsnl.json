{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Quick plot of the SNS Information from ITU",
    "width": 700,
    "height": 250,
    "padding":"auto",

    "data": {
        "name":"snltable",
        "format":{
        "type":"tsv"
        }
    
    },
    "transform": [
        {
            "filter": "datum['FREQUENCY MIN']>0"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "rect",
                "cornerRadius": 10
            },
            "selection": {
                "pandz": {
                    "type": "interval",
                    "bind": "scales"
                }
            },
            "encoding": {
                "y": {
                    "field": "EMISS/REC",
                    "type": "nominal",
                    "title": "Emission (s-E) / Reception (e-S)",
                    "axis": {
                        "grid": true
                    }
                },
                "x": {
                    "field": "FREQUENCY MIN",
                    "type": "quantitative",
                    "scale": {
                        "domainMin":3000,
                        "domainMax":7200
                    },
                    "title": "Frequency (MHz)"
                },
                "x2": {
                    "field": "FREQUENCY MAX"
                },
                "color": {
                    "field": "BEAM NAME",
                    "type": "nominal",
                    "scale": {
                        "scheme": "viridis"
                    }
                },
                "opacity": {
                    "field": "EMISS/REC"
                },
                "tooltip": [
                    {
                        "field": "EMISS/REC"
                    },
                    {
                        "field": "BEAM NAME"
                    },
                    {
                        "field": "FREQUENCY MIN"
                    },
                    {
                        "field": "FREQUENCY MAX"
                    }
                ]
            }
        }
    ]
}
